
<h1 class="family">My Family</h1>

<%= link_to "Today's View", today_index_path %> |
<%= link_to "Monthly View", reminders_path %> |
<%= link_to "My Medication", medications_path %>

<div id= families>
  <div class="family_container">
    <% @families.each do |f| %>
     <div id= "fammember"
       <strong><h3>  Name: <%= f.first_name %> <%= f.last_name  %></h3></strong>
       <h3> Date of Birth: <%= f.dob %> </h3>
       <h3> Phone Number: <%=f.phone_number  %></h3>
       <h3> Email: <%= f.email  %></h3>
       <h3> Relationship: <%= f.relationship %></h3>
    </div>
    <% end %>
  </div>
</div>