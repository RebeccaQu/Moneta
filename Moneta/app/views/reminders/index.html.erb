<h1>reminder</h1>

<% @reminders.each do |r| %>
  <%= r.reminder_name %>
  <%= r.start_time %>
  <%= r.date %>
<% end %>

<h2>Create a Reminder</h2>

<%= form_for @reminder do |f| %>

  <div class="field">
    <%= f.label :reminder_name %>
    <%= f.text_field :reminder_name %>
  </div>

  <div class="field">
    <%= f.label :start_time %>
    <%= f.date_field :start_time %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>

  <div class="field">
    <%= f.label :duration %>
    <%= f.date_field :duration %>
  </div>

  <div class="field">
    <%= f.button "Create Reminder" %>
  </div>

<% end %>

