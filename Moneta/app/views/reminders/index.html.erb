<h1>Hi Betty, this is what you have going on this month!</h1>

<%= link_to "Today's View", today_index_path %> |
<%= link_to "My Family", families_path %> |
<%= link_to "My Medication", medications_path %> 

<% if false %>
<% @reminders.each do |r| %>
 <h1> Reminder: <%= r.reminder_name %> </h1>
 <h3> Date: <%= r.date.strftime("%m/%d/%Y") %> </h3>
 <h3> Start Time: <%= r.start_time.strftime("%H:%M") %> </h3>
 <h3> Duration: <%= r.duration %>min </h3>
<% end %>
<% end %>

<table class="calendar">
  <tbody>
    <tr>
      <%= month_calendar events: @reminders do |date, reminders| %>
        <p class="tod"> <%= date.day %> </p>

        <% reminders.each do |r| %>
          <% if date == r.date %>
            <div>
             <p class="title"> <%= r.start_time.strftime("%H:%M") %> - <%= r.reminder_name %></p>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </tr>
  </tbody>
</table>


<h3>Create A New Reminder</h3>

  <div class="new-reminder">
    <%= render 'form' %>
  </div>
