<h2>Create a Reminder</h2>

<%= form_for @reminder do |f| -%>

  <div class="field">
    <%= f.label :reminder_name %>
    <%= f.text_field :reminder_name %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>

  <div class="field">
    <%= f.button "Create Reminder" %>
  </div>
<% end %>

