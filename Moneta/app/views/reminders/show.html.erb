<h2><%= @reminder.reminder_name %></h2>

<section class="reminder">
  <dl>

    <dt>Start Time</dt>
    <dd><%= @reminder.start_time %></dd>

    <dt>Date</dt>
    <dd><%= @reminder.date%></dd>

    <dt>Duration</dt>
    <dd><%= @reminder.duration %></dd>

   </dl>

<h2>Create a Reminder</h2>

<%= form_for @reminder do |f| %>

  <div class="field">
    <%= f.label :reminder_name %>
    <%= f.text_field :reminder_name %>
  </div>

  <!-- div class="field">
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div> -->

  <div class="field">
    <%= f.button "Create Reminder" %>
  </div>
<% end %>


</section>

