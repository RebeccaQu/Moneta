<h1>Hi Betty, today is <%="#{Date.today.strftime("%A, %b %d")}" %></h1>


<%= link_to "Monthly View", reminders_path %> |
<%= link_to "My Family", families_path %> |
<%= link_to "My Medication", medications_path %>

<div class="eventcontainer">
  <div class="today_event">
    <% @reminders.each do |r| %>
      <% if r.date == Date.today %>
        <div id="todays">
          <h1><%= r.reminder_name %></h1>
          <h2><strong>Date:</strong> <%= r.date.strftime("%m/%d/%Y") %></h2>
          <h2><strong>Start Time:</strong> <%= r.start_time.strftime("%H:%M")%></h2>
          <h2><strong>Duration:</strong> <%= r.duration %>min</h2>
          <h2><strong>Repetition:</strong> <%= r.repetition %></h2>
          <h2><strong>Notification:</strong> <%= r.notification %></h2>
          <h2><strong>Completed: </strong><%= r.completion %>  </h2>
          <div>
            <button class="submit-notification" id="submit-form"> Notify Me </button>
        </div>
        </div>
      <% end %>
    <% end %>
   </div>
   <aside id="icon"><%= image_tag("washer_360.png", alt: "washer")%></aside>
   <aside id="icon"><%= image_tag("pills_360.png", alt: "washer")%></aside>
   <aside id="icon"><%= image_tag("bday_360.png", alt: "washer")%></aside>
</div>

<script>

  $(document).on('ready', function() {
  var notice = new PNotify({
  title: 'Laundry will be ready at 12 PM',
  text: 'Put Clothes in the dryer at 11:30',
  hide: false,
  buttons: {
      closer: false,
      sticker: false
  }
  });
  notice.get().click(function() {
      notice.remove();
  });
  var notice1 = new PNotify({
  title: 'Take Alendronate',
  text: 'Take pill weekly at 18:00pm',
  hide: false,
  buttons: {
      closer: false,
      sticker: false
  }
  });
  notice1.get().click(function() {
      notice1.remove();
  });
  var notice2 = new PNotify({
    title: 'Call Michael Smith(son)! Its His Birthday',
    text: 'Phone Number: (123) 456-7891',
    hide: false,
    buttons: {
      closer_hover: false,
      sticker_hover: false
    }
  });
  notice2.get().click(function() {
      notice2.remove();
  });


});

</script>
